<% include partials/header %>
<main style="margin-top: 15px;">

    <h3>Chat :: <span id="connection-status"></span></h3>

    <hr>

    <div id="output" style="min-height:300px;max-height: 300px;overflow:auto;"></div>

    <form onsubmit="app.sendForm(this);return false;">
        <div class="form-group row">
            <label for="username" class="col-sm-2 col-form-label">Author name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="username" id="username">
            </div>
        </div>
        <div class="form-group row">
            <label for="message" class="col-sm-2 col-form-label">Enter message</label>
            <div class="col-sm-10">
                <textarea class="form-control" name="message" id="message"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</main>
<% include partials/footer %>